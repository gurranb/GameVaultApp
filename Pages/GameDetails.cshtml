@page "{appId:int}"
@model GameVaultApp.Pages.GameDetailsModel
@{
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2>@Model.GameDetails?.Name</h2>

    @if (Model.GameDetails != null)
    {
        <div class="row">
            <div class="col-md-3">
                <img src="@Model.GameDetails.GetIconUrl()" class="img-fluid mb-3" alt="Game Logo" />
            </div>
            <div class="col-md-9">
                <p><strong>Playtime:</strong> @(Model.GameDetails.PlaytimeForever / 60) hrs</p>

                <h4>Achievements</h4>
                @if (Model.Achievements != null && Model.Achievements.Any())
                {
                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                        @foreach (var achievement in Model.Achievements)
                        {
                            <div class="col">
                                <div class="card h-100 border @(achievement.Achieved ? "border-success" : "border-secondary")">
                                    <div class="card-body">
                                        <h5 class="card-title">@achievement.Name</h5>
                                        <p class="card-text">@achievement.Apiname</p>
                                        <span class="badge @(achievement.Achieved ? "bg-success" : "bg-secondary")">
                                            @(achievement.Achieved ? "Unlocked" : "Locked")
                                        </span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p>No achievements found or this game does not support them.</p>
                }

                @if (Model.Inventory?.Descriptions?.Any() == true)
                {
                    <h4 class="mt-4">Inventory</h4>
                    <div class="row">
                        @foreach (var item in Model.Inventory.Descriptions)
                        {
                            <div class="col-md-2 text-center mb-3">
                                <img src="@item.GetFullIconUrl()" class="img-fluid" alt="@item.Name" />
                                <small class="d-block">@item.Name</small>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p>No inventory items found or inventory is private.</p>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">Game not found or failed to load.</div>
    }
</div>
